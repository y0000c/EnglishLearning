<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="demo.yc.englishlearning.activity.CollectionActivity"
    tools:layout_editor_absoluteY="25dp">

    <include
        layout="@layout/common_tool_bar"/>

    <ListView
        android:entries="@array/test"
        android:id="@+id/coll_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:visibility="gone"
        android:background="#eeeeee"
        android:id="@+id/collection_layout_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="已選 : "/>
        <TextView
            android:textColor="#000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:id="@+id/coll_select_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="10"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="delete"
            android:id="@+id/coll_delete_btn"/>
    </LinearLayout>

</LinearLayout>
