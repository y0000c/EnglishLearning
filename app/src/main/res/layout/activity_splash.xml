<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.yc.englishlearning.activity.SplashActivity">

    <ImageView
        android:contentDescription="@string/splash_des_bg_img"
        android:scaleType="fitXY"
        android:id="@+id/welcome_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/welcome_temp"/>
    <TextView
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        android:background="#33eeeeee"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/splash_text_welcome"/>
</FrameLayout>

