<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/common_tool_bar"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/act_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <android.support.design.widget.TabLayout

        android:id="@+id/image_main_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_80"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        yc:tabSelectedTextColor="#fff"
        yc:tabTextColor="#e1e1e1"
        yc:tabIndicatorHeight="1dp"
    yc:tabIndicatorColor="#0bcef1"/>
</LinearLayout>
